{
  "name": "@apollo/graphql-testing-library",
  "version": "0.1.0",
  "repository": {
    "url": "git+https://github.com/apollographql/web-testing-utilities"
  },
  "keywords": [
    "apollo",
    "apollo-client",
    "graphql"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "jest",
    "relay": "relay-compiler",
    "lint": "eslint --ext .ts src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "test-storybook": "test-storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "license": "MIT",
  "devDependencies": {
    "@apollo/client": "^3.10.4",
    "@chromatic-com/storybook": "^1.5.0",
    "@graphql-tools/merge": "^9.0.4",
    "@graphql-tools/mock": "^9.0.3",
    "@graphql-tools/schema": "^10.0.4",
    "@storybook/addon-essentials": "^8.1.6",
    "@storybook/addon-interactions": "^8.1.6",
    "@storybook/addon-links": "^8.1.6",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@storybook/blocks": "^8.1.6",
    "@storybook/react": "^8.1.6",
    "@storybook/react-vite": "^8.1.6",
    "@storybook/test": "^8.1.6",
    "@storybook/test-runner": "^0.18.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@tsconfig/recommended": "^1.0.6",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-relay": "^16.0.6",
    "@types/relay-runtime": "^14.1.24",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "babel-plugin-relay": "^16.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "graphql": "^16.8.1",
    "jest": "^29.7.0",
    "jsdom": "^24.1.0",
    "msw": "^2.3.1",
    "msw-storybook-addon": "^2.0.2",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-relay": "^16.2.0",
    "relay-compiler": "^16.2.0",
    "relay-runtime": "^16.2.0",
    "storybook": "^8.1.6",
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite-plugin-graphql-loader": "^3.0.1",
    "vite-plugin-relay": "^2.1.0"
  },
  "dependencies": {
    "@graphql-tools/executor": "^1.2.6",
    "graphql-tag": "^2.12.6"
  },
  "peerDependencies": {
    "graphql": "^15.0.0 || ^16.0.0 || ^17.0.0",
    "msw": "^2.0.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "relay": {
    "src": "./relay-components",
    "schema": "./relay-components/schema.graphql",
    "language": "typescript",
    "eagerEsModules": true,
    "exclude": [
      "**/node_modules/**",
      "**/__mocks__/**",
      "**/__generated__/**"
    ]
  }
}
